@{
    ViewBag.Title = "Login Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GYMProject</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon" />
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }

        .body-content {
            padding-left: 15px;
            padding-right: 15px;
        }

        .dl-horizontal dt {
            white-space: normal;
        }

        input,
        select,
        textarea {
            max-width: 280px;
            width: 100%;
            box-sizing: border-box;
        }

            input:focus,
            select:focus,
            textarea:focus {
                outline: none;
                border-color: #5cb85c;
                box-shadow: 0 0 5px rgba(92, 184, 92, 0.5);
            }

        input,
        select,
        textarea {
            margin-bottom: 15px;
        }

        footer {
            text-align: center;
            padding: 20px 0;
            background-color: #000;
            color: #fff;
        }

        .navbar-inverse {
            background-color: black;
            border-color: black;
        }

            .navbar-inverse .navbar-brand {
                color: white;
                cursor: default; /* Disable pointer events */
            }

            .navbar-inverse .navbar-nav > li > a {
                color: white;
            }

                .navbar-inverse .navbar-nav > li > a:hover,
                .navbar-inverse .navbar-nav > li > a:focus,
                .navbar-inverse .navbar-nav > .active > a {
                    color: #ccc;
                    background-color: black;
                }

            .navbar-inverse .navbar-right {
                margin-right: 0;
            }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-brand">
                    <img src="~/Content/images/logo.png" alt="Panda Gym Logo" style="display:inline; height:30px; margin-right:10px;">
                    PANDA GYM
                </span>
            </div>
            <div class="navbar-collapse collapse">
                <!-- Omitting the nav links -->
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PANDA GYM</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
